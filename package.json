{
  "name": "otakux",
  "version": "1.0.0",
  "description": "OtakuX: Multi-site manga downloader with embedded browser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.otakux.app",
    "productName": "OtakuX",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.jpeg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.jpeg"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^24.0.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.24.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cross-fetch": "^4.0.0",
    "electron-store": "^10.1.0",
    "fs-extra": "^11.3.0",
    "playwright": "^1.54.2",
    "puppeteer": "^21.0.0",
    "yt-dlp-wrap": "^2.3.12"
  }
}
